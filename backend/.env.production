# Backend Environment Variables - Production
# For production deployment on VPS

# Server Configuration
PORT=4000
NODE_ENV=production

# Database Configuration
# Use a strong password and consider using connection pooling
DATABASE_URL=postgresql://s4labs:STRONG_PASSWORD_HERE@localhost:5432/s4labs_prod

# JWT Configuration (MUST change for production)
JWT_SECRET=GENERATE_RANDOM_64_CHAR_STRING_HERE

# CORS Configuration
ALLOWED_ORIGINS=https://s4labs.xyz,https://www.s4labs.xyz,https://api.s4labs.xyz

# Base L2 Configuration
# Consider using a paid RPC service for production (Alchemy, Infura, QuickNode)
BASE_RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# Contract Addresses (will be updated after mainnet deployment)
TOKEN_FACTORY_ADDRESS=
BONDING_CURVE_ADDRESS=
GRADUATION_MANAGER_ADDRESS=
ESCROW_FACTORY_ADDRESS=

# Private Key for server transactions (CRITICAL - NEVER EXPOSE)
# This wallet will pay for gas fees for certain operations
PRIVATE_KEY=

# Redis Configuration (recommended for production)
REDIS_URL=redis://localhost:6379

# Rate Limiting (adjust based on expected traffic)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=info

# Monitoring (highly recommended for production)
SENTRY_DSN=
DATADOG_API_KEY=

# SSL Configuration (if handling SSL at app level instead of nginx)
SSL_CERT_PATH=
SSL_KEY_PATH=